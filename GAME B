    <script>
        // تابع برای تغییر رنگ پس‌زمینه
        function changeBackground(color1, color2) {
            document.body.style.background = `linear-gradient(135deg, ${color1}, ${color2})`;
        }

        // تابع برای ورود به سایت
        function enterSite() {
            const username = document.getElementById('username').value;
            if (username) {
                // مخفی کردن صفحه خوش‌آمدگویی
                document.getElementById('welcome-container').style.display = 'none';
                // نمایش صفحه اصلی
                document.getElementById('game-list').style.display = 'flex';
                // نمایش فوتر
                document.getElementById('footer').style.display = 'block';
                // نمایش پیام خوش‌آمدگویی
                document.getElementById('welcome-message').innerText = `${username} عزیز، به سایت ۱۰ بازی اندروید برتر خوش آمدید!`;
            } else {
                alert('لطفاً نام خود را وارد کنید.');
            }
        }
    </script>
